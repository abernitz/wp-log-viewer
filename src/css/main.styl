#wp-log-viewer	
	
	h2
		margin 0 0 15px
		
	.viewer
		display inline-block
		width 80%
		min-height 530px
		height 100%
		float left
		background #f5f5f5
		border none
		border-bottom 1px solid #d9d9d9
		box-sizing border-box
		padding 15px
		
	.sidebar
		display inline-block
		float left
		padding-left 4%
		
		h3
			font-size 1.2em
			margin 0 0 10px
			
		ul
			display block
			list-style none
			padding 0
			margin 0 0 25px
			
			li
				list-style none
				padding 1px 0
				margin 0
				
		small
			font-size 0.85em
				
				