@import 'Jeet'


body
	min-height 1200px
	height 100%
	
.debugger-status.enabled
	background #C0E69F
	
.debugger-status.disabled
	background #DA8F92

#viewer-pane
	span()
	cf()

	h2
		margin 0 0 15px
		
		.debugger-status
			display inline-block
			font-size 11px
			line-height 11px
			color #444
			border-radius 6px
			padding: 5px 10px
			margin-left 22px

	.group-entries,
	.log-entries
		col(0.75)
		min-height 530px
		height 100%
		border none
		border-right 1px solid #d9d9d9
		box-sizing border-box
		padding 15px 0

	.log-entries
		.log-entry
			span()
			margin-bottom 5px
			
			.when
				col(0.15)
				font-size 0.8em
				font-weight bold
								
			.time
				col(0.15)
				font-size 0.8em
							
			.message
				col(0.7)
				font-size 1em

			&.padded-top
				margin-top 22px
	
	.group-entries
		.group-entry
			span()
			margin-bottom 15px
			
			.when
				col(0.15)
				font-size 0.8em
				
				.date
					display block
					font-weight bold
				
				.time
					display block
					
			.message
				col(0.82)
				font-size 1.1em
			
			.group-actions
				span()
				font-size 0.8em
				margin-top 3px
				
			.entry-detail
				display none

	.sidebar
		col(0.25)
		padding 15px 0
		
		h3
			font-size 1.2em
			margin 0 0 10px
			
		ul
			display block
			list-style none
			padding 0
			margin 0 0 25px
			
			li
				list-style none
				padding 1px 0
				margin 0
				
		small
			font-size 0.85em
	
	.highlight
		color #ff0000
		background transparent

	.code-snippet
		border 1px solid #f0f0f0
		background #fafafa
		padding 15px
				