@import 'Jeet'
@import '../bower/humane/themes/flatty.css'


$text-color				= #222
$default-legend-color	= #e1e1e1


body
	min-height 1200px
	color $text-color
	height 100%

.debugger-status.enabled
	background #C0E69F

.debugger-status.disabled
	background #DA8F92

.debugger-status.not-detected
	background #FAEE7D

.enable-debugging-btn,
.disable-debugging-btn
	display inline-block
	border-radius 4px
	color #fff
	font-size 1.1em
	text-decoration none
	padding 0.8em 1em
	margin-right 8px
	
	i
		margin-right 8px
	
	&:hover
		color #fff

.enable-debugging-btn
	background darken(#C0E69F, 50%)
	
.disable-debugging-btn
	background darken(#DA8F92, 50%)

.humane-wplv-alert, 
.humane-wplv-error, 
.humane-wplv-success
	text-align left
	box-shadow: 0px 2px 21px 0px rgba(0,0,0,0.53);
	padding 8px 20px 12px

.humane-wplv-alert
	color #000
	background #f4f4f4

.humane-wplv-error
	color #fff
	background #B52E29

.humane-wplv-success
	color #fff
	background #6A9D35

#viewer-pane
	span()
	cf()
	
	.loading-status
		display block
		width 50px
		heigh 50px
		margin 180px auto 0

	.view-header
		span()
		margin 0 0 15px

		h2
			col(0.76, gutter: 0)

			.debugger-status
				display inline-block
				font-size 12px
				line-height 12px
				color #444
				border-radius 5px
				padding: 8px 12px
				margin-left 20px

		.search-group
			col(0.18, gutter: 0)
			border 1px solid #ddd
			border-radius 6px
			margin 12px 0 0
			
			.fa
				margin-left 6px

			.search-field
				display inline-block
				color #444
				background none
				box-shadow none
				border none
				margin-left 8px
				
				&::-webkit-input-placeholder
					font-style italic
					color #bbb

	.group-entries,
	.log-entries
		col(0.75)
		min-height 530px
		height 100%
		border none
		border-right 1px solid #dadada
		box-sizing border-box
		padding 0 2px 0 0
		
		.error-details
			display block
			font-size 0.85em
			margin 15px 0 0
			
			&:empty
				display none
							
			.error-type,
			.file-path,
			.line-number
				color lighten($text-color, 50%)

			.file,
			.line,
			.type
				color $text-color
				font-weight bold
				margin-left 8px
			
			.file
				margin-left 13px
			
			.type
				margin-left 5px
		
		.php-fatal-error
			border-color #B52E29 !important

		.php-notice
			border-color #FEFAB6 !important

		.php-warning
			border-color #BDD7FF !important

		.error-indicator-legend
			list-style none
			padding 0
			margin 0 0 45px

			li
				display inline-block
				font-size 0.8em
				font-weight bold
				list-style none
				border-left 4px solid
				padding 0 0 0 5px
				margin 0 30px 0 0

	.log-entries
		.log-entry
			span()
			border-left 4px solid $default-legend-color
			margin-bottom 15px

			.when
				col(0.15, offset: 0.02)
				font-size 0.8em

				.date
					display block
					font-weight bold

			.message
				col(0.82)
				font-size 1em

			&.padded-top
				margin-top 22px

	.group-entries
		.group-entry
			span(1)
			border-left 4px solid $default-legend-color
			margin-bottom 30px

			.when
				col(0.15, offset: 0.02)
				font-size 0.8em

				.date
					display block
					font-weight bold

				.time
					display block

			.message
				col(0.82)
				font-size 1.1em

			.group-actions
				span()
				font-size 0.8em
				margin-top 3px

			.group-entry-details
				span()
				background #eaeaea
				border-bottom 1px solid #dadada
				padding 10px 0
				margin 12px 0 0

				.details
					display block
					padding 0 15px

				.when
					span()		
					margin 0 0 4px

					.date
						col(0.20)

					.time
						col(0.70)

			.group-entry-details.active
				padding-bottom 8px
				margin-bottom 10px

			.show-group-details,
			.hide-group-details
				display block
				font-size 0.8em
				text-decoration none

			.hide-group-details
				margin-bottom 10px

	.sidebar
		col(0.25)
		padding 15px 0

		.refresh-status
			margin 0 0 25px

			.refresh-btn
				display inline-block
				font-size 0.9em
				color #fff
				background #555
				border 1px solid #444
				border-left 1px solid #666
				border-top 1px solid #666
				padding 6px 20px
				border-radius 4px
				text-decoration none

		.menu-group
			margin 0 0 25px

			h3
				font-size 1.2em
				margin 0 0 6px

			ul
				display block
				list-style none
				padding 0

				li
					list-style none
					padding 1px 0
					margin 0
					
					.fa
						margin-right 6px

					a
						display inline-block
						color #333
						font-size 0.9em
						border-radius 4px
						text-decoration none
						padding 4px 10px
						margin-bottom 1px

						&:hover
							color #444

					&.active a
						background-color #e2e2e2

		.last-modified
			font-size 0.85em
			padding-top 5px

			.when
				display block;

		.log-filesize
			font-size 0.85em
			margin-top 15px

	.highlight
		color #ff0000
		background transparent

	.code-snippet
		border 1px solid #f0f0f0
		background #fafafa
		padding 15px