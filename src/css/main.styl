@import 'Jeet'
@import '../bower/humane/themes/flatty.css'

body
	min-height 1200px
	height 100%

.debugger-status.enabled
	background #C0E69F

.debugger-status.disabled
	background #DA8F92

.humane-wplv-alert, 
.humane-wplv-error, 
.humane-wplv-success
	text-align left
	box-shadow: 0px 2px 21px 0px rgba(0,0,0,0.53);
	padding 8px 20px 12px
	
.humane-wplv-alert
	color #000
	background #f4f4f4

.humane-wplv-error
	color #fff
	background #B52E29
	
.humane-wplv-success
	color #fff
	background #6A9D35

#viewer-pane
	span()
	cf()

	h2
		margin 0 0 15px

		.debugger-status
			display inline-block
			font-size 11px
			line-height 11px
			color #444
			border-radius 6px
			padding: 5px 10px
			margin-left 22px

	.group-entries,
	.log-entries
		col(0.75)
		min-height 530px
		height 100%
		border none
		border-right 1px solid #dadada
		box-sizing border-box
		padding 15px 2px 0 0

	.log-entries
		.log-entry
			span()
			margin-bottom 8px

			.when
				col(0.15)
				font-size 0.8em

				.date
					display block
					font-weight bold

			.message
				col(0.82)
				font-size 1em

			&.padded-top
				margin-top 22px

	.group-entries
		.group-entry
			span()
			margin-bottom 15px

			.when
				col(0.15)
				font-size 0.8em

				.date
					display block
					font-weight bold

				.time
					display block

			.message
				col(0.82)
				font-size 1.1em

			.group-actions
				span()
				font-size 0.8em
				margin-top 3px

			.group-entry-details
				span()
				background #eaeaea
				border-bottom 1px solid #dadada
				padding 10px 0
				margin 12px 0
				
				.details
					display block
					padding 0 15px
					
				.when
					span()		
					margin 0 0 4px

					.date
						col(0.20)

					.time
						col(0.70)

			.group-entry-details.active
				padding-bottom 8px
				margin-bottom 10px

			.show-group-details,
			.hide-group-details
				display block
				font-size 0.8em
				text-decoration none

			.hide-group-details
				margin-bottom 10px

	.sidebar
		col(0.25)
		padding 15px 0
		
		.refresh-status
			margin 0 0 25px
			
			.refresh-btn
				display inline-block
				font-size 0.9em
				color #fff
				background #555
				border 1px solid #444
				border-left 1px solid #666
				border-top 1px solid #666
				padding 6px 20px
				border-radius 4px
				text-decoration none

		.menu-group
			margin 0 0 25px

			h3
				font-size 1.2em
				margin 0 0 6px

			ul
				display block
				list-style none
				padding 0

				li
					list-style none
					padding 1px 0
					margin 0

					a
						display inline-block
						color #333
						font-size 0.9em
						border-radius 4px
						text-decoration none
						padding 4px 10px
						margin-bottom 1px

						&:hover
							color #444

					&.active a
						background-color #e2e2e2

		.last-modified
			font-size 0.85em
			padding-top 5px

			.when
				display block;
				
		.log-filesize
			font-size 0.85em
			margin-top 15px

	.highlight
		color #ff0000
		background transparent

	.code-snippet
		border 1px solid #f0f0f0
		background #fafafa
		padding 15px